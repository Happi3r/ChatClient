<Page x:Class="ChatClient.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel Width="250" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="ID"></Label>
            <TextBox x:Name="IDTextBox"/>
            <Grid Height="12"></Grid>
            <Label Content="비밀번호"></Label>
            <PasswordBox x:Name="PasswordTextBox"/>
            <Grid Height="24"></Grid>
            <Grid>
                <Button Content="회원가입" Click="RegisterBtnClick" HorizontalAlignment="Left" Style="{DynamicResource MaterialDesignFlatButton}"></Button>
                <Button Content="로그인" Click="LoginBtnClick" IsDefault="True" HorizontalAlignment="Right"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
